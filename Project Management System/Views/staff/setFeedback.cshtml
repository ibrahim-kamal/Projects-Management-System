@model Project_Management_System.Models.feedback

@{
    ViewBag.Title = "setFeedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Emoji rating</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel="stylesheet" href="~/Content/css/styleemoji.css">
</head>

<body>
    <form action="/staff/Index" method="get">

        <div>
            <p style="color:black;font-size:32px;margin-left :120px;margin-top:20px">Write Your Feedback</p>
            <label style="color:black ;font-size:20px;margin-left :150px;margin-top:30px;margin-right:30px">Content</label>
            <input type="text" style=" margin-left :450;margin-top:30px ; width:300px ; height:50px;color:black">
        </div>

        <label style="color:black ;font-size:20px;margin-left :150px;margin-top:40px">Rating</label>

        <div class="rate" style="margin-left :280px ; margin-top:-35px">
            <div class="emoji">😑</div>
            <input type="range" min="0" max="4" step="1" value="">
        </div>
        <input type="submit" value="Save Feedback" style="color:white ; background-color:crimson ; margin-left :750px; width:140px ; height:50px">

    </form>
    <hr />

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>

    <script src="~/Scripts/indexemoji.js"></script>
</body>

</html>
